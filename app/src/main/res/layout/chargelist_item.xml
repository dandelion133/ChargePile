<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" >
    <RelativeLayout 
        android:id="@+id/charge_item_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
     
        <RelativeLayout 
            android:id="@+id/charge_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:paddingBottom="5dp"
            android:background="@drawable/framelayout_blue">

               <TextView
                android:id="@+id/pileidtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="订单编号" />
            
            <TextView
                android:id="@+id/statetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pileidtv"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="订单状态" />
          <TextView
                android:id="@+id/pileidnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pileidtv"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:text="" />
            
        </RelativeLayout>
        
        
    </RelativeLayout>
    <View 
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_below="@+id/my_cdstatus_content"
            android:background="#ffffff"/>
    

</RelativeLayout>
